{% extends 'base.html.twig' %}

{% block title %}Complétez votre profil{% endblock %}

{% block body %}
<div class="vh-100 center">
    <form action="{{ path('app_complete')}}" method="post" class="container-xs border rounded p-3">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate')}}">
        <div class="form-group mb-3">
            <label for="username" class="form-label">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="username" value="{{ app.user.username ?? '' }}" required minlength="2" maxlength="80" pattern="['a-zA-Z0-9_-]" {{app.user.username ? 'readonly' : ''}}>
            <p class="help fst-italic">2 caractères minimum, uniquement des lettres, des chiffres et des tirets</p>
        </div>
        <div class="form-group mb-3">
            <label for="fullname" class="form-label">Nom complet</label>
            <input type="text" class="form-control" id="fullname" name="fullname" value="{{ app.user.fullname ?? '' }}" required minlength="5" maxlength="80" pattern="['a-zA-Z-\s]" {{app.user.fullname ? 'readonly' : ''}}>
            <p class="help fst-italic">5 caractères minimum, uniquement des lettres, des traits d'unions, des apostrophes et des espaces
            </p>
        </div>

        <button type="submit" class="btn btn-success">Enregistrer</button>
    </form>
</div>

{% endblock %}